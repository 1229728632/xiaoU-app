@import '../../stylus/color.styl';

.sortBox {
    width: 100vw;
    height: 100vh;

    .con {
        width: 100%;
        display: flex;

        .left {
            width: 30%;

            ul li {
                width: 100%;
                height: 0.4rem;
                text-align: center;
                line-height: 0.4rem;
            }

            .sel {
                background: #fff;
                color: $primary-color;
                border-left: 5px solid #1d84a7;
            }
        }

        .right {
            display: flex;
            flex-wrap: wrap
            width: 70%;

            .itemBox {
                display: flex;
                position: relative;
                width: 1rem;
                height: 1.1rem;
                border: 1px solid #1d84a7;
                margin: 0.09rem 0.07rem;
                flex-direction: column;

                .itemImg {
                    width: 1rem;
                    height: 1.1rem;
                }

                .itemTit {
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    text-align: center;
                    background: #1d84a7;
                    color: #fff;
                }
            }
        }
    }
}